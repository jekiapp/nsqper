    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch NSQper",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-data_dir=${workspaceFolder}/infra/data",
                "-port=4181",
                "-nsqlookupd_http_address=http://localhost:4161"
            ]
        },
        {
            "name": "Debug NSQper",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-data_dir=${workspaceFolder}/infra/data",
                "-port=4181",
                "-nsqlookupd_http_address=http://localhost:4161"
            ]
        }
    ]
}