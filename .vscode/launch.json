    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch NSQper",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-data_path=${workspaceFolder}/data/nsqper.db",
                "-port=4181"
            ]
        },
        {
            "name": "Run NSQper",
            "type": "go",
            "request": "launch",
            "mode": "run",
            "program": "${workspaceFolder}",
            "args": [
                "-data_path=${workspaceFolder}/data/nsqper.db",
                "-port=4181"
            ]
        },
        {
            "name": "Debug NSQper",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-data_path=${workspaceFolder}/data/nsqper.db",
                "-port=4181"
            ]
        }
    ]
}