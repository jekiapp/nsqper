{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch topic-master",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-data_path=${workspaceFolder}/infra/data/topic-master.db",
                "-port=4181",
                "-nsqlookupd_http_address=http://localhost:4161"
            ]
        },
        {
            "name": "Debug topic-master",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-data_path=${workspaceFolder}/infra/data/topic-master.db",
                "-port=4181",
                "-nsqlookupd_http_address=http://localhost:4161"
            ]
        }
    ]
}